---
import TSWLogo from "../atoms/icons/TSWLogo.astro";
---

<header>
    <div class="section-inner">
        <nav>
            <a href="/">
                <TSWLogo color="var(--white)" />
            </a>
    
			<input id="menu-button" type="checkbox">
			<label for="menu-button"></label>        
        </nav>
    </div>
</header>

<style>
    header {
        position: fixed;
        justify-self: center;
        mix-blend-mode: difference;

        nav {
            display: flex;
            padding: 1rem 0;
            justify-content: space-between;
        }

        input[type="checkbox"] {
            display: none;

            &:checked {
                & ~ label {
                    &::before {
                        transform: rotate(6.7deg);
                        transform-origin: left;
                    }
                    &::after {
                        transform: rotate(-6.7deg);
                        transform-origin: left;
                    }
                }
            }
        }

        label {
            width: 7rem;
            height: 1rem;
            position: relative;
            align-self: center;

            &::before,
            &::after {
                content: "";
                position: absolute;
                transition: var(--quick);
                background: var(--white);
                width: 100%;
                height: 3px;
            }

            &::after {
                bottom: 0;
            }

            &:hover {
                cursor: pointer;
            }
        }
    }
</style>