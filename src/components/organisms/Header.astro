---
import TSWLogo from "../atoms/icons/TSWLogo.astro";
---

<header>
    <nav>
        <a href="/">
            <TSWLogo color="var(--white)" />
        </a>

		<input id="menu-button" type="checkbox">
		<label for="menu-button"></label>        
    </nav>
</header>

<style>
    header {
        z-index: 1;
        width: 100%;
        padding: 2rem;
        max-width: calc(1440px + 4rem);
        
        position: fixed;
        justify-self: center;
        mix-blend-mode: difference;
        
        /* Mobile */
        @media (max-width: 768px) {
            padding: 1rem;
        }
        
        nav {
            display: flex;
            justify-content: space-between;
        }

        input[type="checkbox"] {
            display: none;

            &:checked {
                & ~ label {
                    &::before {
                        rotate: 10deg;
                        transform: translateY(calc(0.5rem - 3px));
                        transition: transform var(--quick),
                                    rotate var(--quick) 0.4s;
                    }
                    &::after {
                        rotate: -10deg;
                        transform: translateY(-0.5rem);
                        transition: transform var(--quick),
                                    rotate var(--quick) 0.4s;                    
                    }
                }
            }
        }

        label {
            width: 7rem;
            height: 1rem;
            position: relative;

            &::before,
            &::after {
                content: "";
                position: absolute;
                transition: var(--quick);
                background: var(--white);
                width: 100%;
                height: 3px;
            }

            &::after {
                bottom: 0;
            }

            &:hover {
                cursor: pointer;
            }
        }
    }
</style>