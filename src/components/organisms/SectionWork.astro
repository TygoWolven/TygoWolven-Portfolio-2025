---
import Cases from "../molecules/Cases.astro"
---

<section id="work">
    <section class="section-inner">
        <Cases />

        <a href="/work" class="primary-button">
            <span>
                More featured school-projects
            </span>
        </a>
    </section>
</section>

<style> 
    #work {
        ul.cases {
            li:nth-of-type(2) ~ li {
                display: none;
            }
        }

        .primary-button {
            margin-bottom: 64px;
            
            span {
                &::before {
                    content: "7";
                    position: absolute;
                    font-size: 12px;
                    opacity: 0.5;
                    right: 2.3rem;
                    top: 1.2rem;
                    z-index: 2;
                }
            }
        }
    }
</style>