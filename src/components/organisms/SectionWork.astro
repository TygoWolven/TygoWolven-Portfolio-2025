        		link="fresk-digital"
        		image="/images/Fresk-Digital.png"
        		title="Fresk Digital" 
        		framework="HTML, CSS, Javascript"  
        	/>
        	<Case
        		link="wogo-cocktail-walks"
        		image="/images/WOGO.png"
        		title="WOGO" 
        		framework="Sveltekit"  
        	/>
        	<Case
        		link="de-hallen"
        		image="/images/De-Hallen.png"
        		title="De Hallen" 
        		framework="HTML, CSS, Javascript" 
        	/>
        	<Case
        		link="business-news-radio"
        		image="/images/Business-News-Radio.png"
        		title="BNR" 
        		framework="HTML, CSS, Javascript"   
        	/>
        	<Case
        		link="squadpage"
        		image="/images/Squadpage.png"
        		title="Squadpage" 
        		framework="HTML, CSS, Javascript"   
        	/>
        	<Case
        		link="portfolio"
        		image="/images/Portfolio.png"
        		title="Portfolio" 
        		framework="Astro"   
        	/>
        	<Case
        		link="learning-blog"
        		image="/images/Learning-Blog.png"
        		title="Learning Blog" 
        		framework="Astro"   
        	/>
        	<Case
        		link="https://github.com/TygoWolven?tab=repositories"
        		title="Check out all my work!" 
        		framework="Github"   
        	/>
        </ul>
    </section>
</section>

<style>
    ul.cases {
        display: flex;
        flex-wrap: wrap;
        gap: 2rem;

        li {
            margin-bottom: 4rem;
            width: calc(50% - 1rem);
			
            &:nth-of-type(1) img {
                background: #E2D9ED;
            }
            &:nth-of-type(2) img {
                background: #F7E1D7;
            }
            &:nth-of-type(3) img {
                background: #B2B2A5;
            }
            &:nth-of-type(4) img {
                background: #FAF3DC;
            }
            &:nth-of-type(5) img {
                background: #E6E6E6;
            }
            &:nth-of-type(6) img {
                background: #D5DFF3;
            }
            &:nth-of-type(7) img {
                background: #CFC4B8;
            }
        }

		.cta-github {
			border: 2px solid var(--light-grey);
		}

		/* Tablet */
		@media (max-width: 868px) {
			li {
				width: 100%;
			}
		}

		/* Mobile */
		@media (max-width: 768px) {
			li {
				img {
					padding: 0 1rem;
				}
			}
		}
    }
</style>