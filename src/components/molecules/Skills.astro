	/>
	<Skill
		link="squadpages"
		title="Squadpages" 
		service="Design & Development"   
		framework="HTML, CSS, Javascript"   
	/>
	<Skill
		link="my-portfolio"
		title="My Portfolio" 
		service="Design & Development"   
		framework="Astro"   
	/>
	<Skill
		link="my-learning-blog"
		title="My Learning Blog" 
		service="Design & Development"   
		framework="Astro"   
	/>
</ul>

<style>
    ul.subtitles {
		display: grid;
		grid-area: subtitles;
		border: 4px solid transparent;
		grid-template-columns: 2fr 2fr 2fr 1fr;

		padding: 0 4rem;
		margin-bottom: 0.5rem;

        /* Mobile */
        @media (max-width: 768px) {
            padding: 0 2rem;
        }
	
        li {
            h4.subtitle {
                font-size: 12px;
                font-weight: 600;
                white-space: nowrap;
                text-transform: uppercase;
                color: var(--regular-grey);
            }

			&:first-of-type h4 {
				min-width: 333px;
			}
			&:nth-of-type(2) h4 {
				min-width: 222px;
			}
			&:last-of-type h4 {
				justify-self: end;
			}
		}

        /* Mobile / Laptop */
        @media (max-width: 1050px) {
            li {
                h4.subtitle {
                    &:first-of-type {
                        min-width: unset;
                    }
                }
            }

            li:nth-of-type(2),
            li:nth-of-type(3) {
                h4 {
                    display: none;
                }
            }
        }
	}

	.hover-container {
		position: fixed;
		top: 0;
		left: 0;
		scale: 0;

		z-index: 1;
		height: 350px;
		aspect-ratio: 1;
		overflow: hidden;
		border-radius: 1rem;
		pointer-events: none;
		box-shadow: var(--smooth);
		border: 6px solid transparent;
		background: var(--light-grey);

		.image-container {
			display: flex;
			flex-direction: column;

			img {
				width: 100%;
				aspect-ratio: 1;
				padding: 0 1rem;
				object-fit: contain;

				&.image-1 {
					background: #E2D9ED;
				}
				&.image-2 {
					background: #F7E1D7;
				}
				&.image-3 {
					background: #B2B2A5;
				}
				&.image-4 {
					background: #FAF3DC;
				}
				&.image-5 {
					background: #E6E6E6;
				}
				&.image-6 {
					background: #D5DFF3;
				}
				&.image-7 {
					background: #CFC4B8;
				}
			}
		}
	}

	ul.skills {
		grid-area: skills;
		justify-content: center;
		
		li {
			&:nth-of-type(1n) {
				border-radius: 1rem;
				box-shadow: var(--smooth);
				background: var(--medium-grey);
				border: 4px solid var(--light-grey);
			}
	
			&:nth-of-type(2n) {
				background: none;
				box-shadow: none;
				border: 4px solid transparent;
			}
		}

	}

	/* Mobile / Laptop */
	@media (max-width: 1050px) {
		ul.subtitles {
			display: none;
		}

		ul.skills {
			display: flex;
			flex-wrap: wrap;
			justify-content: unset;
	
			li:nth-of-type(1n),
			li:nth-of-type(2n) {
				width: calc(50% - 1rem);
				box-shadow: var(--smooth);
				background: var(--medium-grey);
				border: 4px solid var(--light-grey);
			}
			li:nth-of-type(1n) {
				margin: 0 1rem 2rem 0;
			}
			li:nth-of-type(2n) {
				margin: 0 0 2rem 1rem;
			}
		}
	}
</style>