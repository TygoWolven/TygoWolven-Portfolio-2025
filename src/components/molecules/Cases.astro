<style>
    ul.cases {
        display: flex;
        flex-wrap: wrap;
        gap: 2rem;

        li {
            margin-bottom: 4rem;
            width: calc(50% - 1rem);

            img {
                width: 100%;
			    aspect-ratio: 1;
			    padding: 0 2rem;
			    object-fit: contain;
            }
            
            &:nth-of-type(1) img {
                background: #E2D9ED;
            }
            &:nth-of-type(2) img {
                background: #F7E1D7;
            }
            &:nth-of-type(3) img {
                background: #B2B2A5;
            }
            &:nth-of-type(4) img {
                background: #FAF3DC;
            }
            &:nth-of-type(5) img {
                background: #E6E6E6;
            }
            &:nth-of-type(6) img {
                background: #D5DFF3;
            }
            &:nth-of-type(7) img {
                background: #CFC4B8;
            }
        }

		/* Tablet */
		@media (max-width: 868px) {
			li {
				width: 100%;
			}
		}

		/* Mobile */
		@media (max-width: 768px) {
			li {
				img {
					padding: 0 1rem;
				}
			}
		}
    }
</style>