---
import Layout from "../layouts/Layout.astro";
import Cases from "../components/molecules/Cases.astro";
---

<Layout>
    <section id="all-work">
        <section class="section-inner">
            <h1>What have I created during my studies?</h1>

            <Cases />

            <a href="https://github.com/TygoWolven?tab=repositories" class="primary-button">
                <span>
                    All projects on Github
                </span>
            </a>
        </section>
    </section>
</Layout>

<style>
    #all-work {
        &::before {
			content: "";
    		position: absolute;
			z-index: 0;
			inset: 0;
    		background: radial-gradient(
    		    ellipse at 50% -60%,
    		    var(--white) 20%,
    		    var(--light-blue),
    		    var(--dark-grey) 50%
    		);
    		background-size: 200%;
    		background-position: 50%;
    		filter: blur(100px);
		}

        h1 {
            position: relative;
            text-transform: inherit;
            font-family: Montserrat;
            margin: 196px 0 96px 0;
            max-width: 18ch;
        }
    }

    .primary-button {
        margin-bottom: 64px;

        span {
            &::before {
                content: "49";
                position: absolute;
                font-size: 12px;
                opacity: 0.5;
                right: 1.8rem;
                top: 1.2rem;
                z-index: 2;
            }
        }
    }
</style>